<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/task.dialog.description.label"
        android:text="@string/task_description"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/task.dialog.description.label"
        android:id="@+id/task.dialog.description"/>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/task.dialog."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task.dialog.description"
        android:layout_margin="5dp"
        android:hint="@string/taskNotes">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task.notes.input" />


    </android.support.design.widget.TextInputLayout>


</RelativeLayout>